<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sweedelight.ganesh.sweedelight">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"

        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity android:name=".Activities.Splash" >
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ImageSlider"
            android:label="@string/title_activity_image_slider"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".Activities.Location"></activity>

        <activity
            android:name=".Activities.Sweets"
            android:label="@string/title_activity_sweets"
            android:parentActivityName=".Activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sweedelight.ganesh.sweedelight.Activities.MainActivity" />
        </activity>

    </application>

</manifest>
